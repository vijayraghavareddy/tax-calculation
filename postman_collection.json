		{
			"name": "Calculate Tax - US Purchase",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('address');",
							"    pm.expect(jsonData).to.have.property('items');",
							"    pm.expect(jsonData).to.have.property('subtotal');",
							"    pm.expect(jsonData).to.have.property('total_tax');",
							"    pm.expect(jsonData).to.have.property('grand_total');",
							"});",
							"",
							"pm.test(\"Subtotal is correct\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.subtotal).to.eql(200.00);",
							"});",
							"",
							"pm.test(\"Tax is calculated\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.total_tax).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Grand total equals subtotal plus tax\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.grand_total).to.eql(jsonData.subtotal + jsonData.total_tax);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"address\": {\n    \"street\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"country\": \"US\",\n    \"zipcode\": \"10001\"\n  },\n  \"items\": [\n    {\n      \"id\": \"item1\",\n      \"name\": \"Product A\",\n      \"description\": \"A great product\",\n      \"price\": 100.00,\n      \"quantity\": 2\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/calculate-tax",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"calculate-tax"
					]
				},
				"description": "Calculate tax for a US address with a single item."
			},
			"response": []
